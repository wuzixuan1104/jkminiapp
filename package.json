{
  "name": "root",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "files": [
    "packages/*"
  ],
  "scripts": {
    "docs": "doctoc --title '**Table of content**' README.md",
    "clean": "lerna run clean",
    "clean:packages": "lerna run clean",
    "prebuild": "npm run clean:packages",
    "build": "tsc -b && lerna run build:cjs",
    "pub": "lerna publish",
    "test": "lerna run test",
    "watch": "concurrently \"lerna run build --parallel -- -w\" \"tsc -b -w\"",
    "prerelease": "./scripts/prerelease",
    "release": "lerna publish --force-publish --exact",
    "prepare": "yarn build"
  },
  "devDependencies": {
    "@nighttrax/eslint-config-tsx": "~7.0.0",
    "doctoc": "~2.0.0",
    "eslint": "~7.16.0",
    "lerna": "~3.22.0",
    "concurrently": "^5.2.0",
    "typescript": "~4.1.0",
    "@types/jest": "^26.0.15",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4"
  }
}
